/* 全局配色 */
page {
  background-color: #f5f0e1;
  font-family: 'Menlo', 'Consolas', monospace;
}

/* 通用按钮风格 */
button {
  border-radius: 6rpx;
  background-color: #011a3fd8;
  color: #fff;
  font-weight: bold;
}

/* 全局标题样式 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  margin: 20rpx 0;
}

/* 棋盘容器背景 */
.chessboard-container {
  background-color: #e8d8b8ff;
  border: 4rpx solid #3b2e2a;
}