/* 棋盘容器 */
.chessboard {
  display: inline-block; /* 使棋盘宽度适应内容 */
  border: 4rpx solid #333; /* 加粗边框 */
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
  background-color: #f0d9b5; /* 设置背景色 */
}

/* 棋盘行 */
.row {
  display: flex;
  flex-direction: row;
}

/* 棋盘格子 */
.cell {
  width: 70rpx;
  height: 70rpx;
  border: 1rpx solid #f0d9b5;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0d9b5; /* 浅色格子 */
  position: relative;
}

/* 深色格子 */
.cell.dark {
  background-color: #b58863;
}

/* 悬停效果 */
.cell:hover {
  opacity: 0.8;
  transform: scale(1.05);
  transition: all 0.2s ease-in-out;
}

/* 选中的格子 */
.cell.selected {
  background-color: #aec6cf;
  box-shadow: inset 0 0 10rpx 4rpx #4a90e2;
}

/* 可移动到的目标格子 */
.cell.target {
  background-color: #77dd77;
  box-shadow: inset 0 0 10rpx 4rpx #228b22;
}

/* 选中格子上的棋子 */
piece.selected {
  filter: brightness(1.2);
}