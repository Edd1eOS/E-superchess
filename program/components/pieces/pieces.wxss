.piece {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  position: relative;
}

.piece-icon {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.white {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #333;
}

.black {
  background-color: #222;
  color: #fff;
  border: 2rpx solid #eee;
}

.selected {
  border: 4rpx solid #ffcc00;
  box-shadow: 0 0 10rpx #ffcc00;
}