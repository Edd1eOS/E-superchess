/* pages/replay/replay.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 70rpx; /* 增加整体内边距 */
  background-color: #f5f5f5;
  min-height: 100vh;
}

.board-container {
  margin-top: 100rpx; /* 增加上边距使棋盘进一步下移 */
  margin-bottom: 20rpx;
  border: 2rpx solid #333;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.3);
}

.slider-container {
  width: 80%;
  margin-bottom: 30rpx;
}

.step-text {
  text-align: center;
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #333;
}

.controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.controls button {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}