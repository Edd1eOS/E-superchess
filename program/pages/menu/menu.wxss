.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #ffffffff;
}

.title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 50px;
  color: #333;
}

.menu-buttons {
  display: flex;
  flex-direction: column;
  width: 60%;
  align-items: center;
}

.menu-buttons button {
  margin: 10px 0;
  padding: 15px;
  font-size: 18px;
  border-radius: 8px;
  background-color: #001affff;
  color: white;
  width: 100%;
  text-align: center;
}

/* PvE设置对话框样式 */
.pve-settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: white;
  border-radius: 10px;
  overflow: hidden;
}

.modal-header {
  padding: 20px;
  background-color: #1aad19;
  text-align: center;
}

.modal-title {
  font-size: 20px;
  font-weight: bold;
  color: white;
}

.modal-body {
  padding: 20px;
}

.player-setting {
  margin-bottom: 20px;
}

.player-label {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
}

.type-selector {
  display: flex;
  margin-bottom: 10px;
}

.radio-item {
  margin-right: 20px;
}

.level-selector {
  margin-top: 10px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.level-picker {
  padding: 5px;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 20px;
  background-color: #f0f0f0;
}

.cancel-btn, .confirm-btn {
  padding: 10px 20px;
  border-radius: 5px;
}

.cancel-btn {
  background-color: #cccccc;
  color: #333;
}

.confirm-btn {
  background-color: #1aad19;
  color: white;
}