<view class="container">

  <text class="section-title">棋盘外观 Board Theme</text>
  <radio-group bindchange="onBoardStyleChange">
    <label wx:for="{{boardStyles}}" wx:key="value" class="radio-item">
      <radio value="{{item.value}}" checked="{{item.value === boardStyle}}"></radio>
      <text>{{item.label}}</text>
    </label>
  </radio-group>

  <text class="section-title">音效大小 Sound Volume</text>
  <slider
    min="0"
    max="100"
    step="1"
    value="{{volume}}"
    bindchange="onVolumeChange"
  />

  <text class="section-title">音效设置 Sound Settings</text>
  <radio-group bindchange="onSoundTypeChange">
    <label class="radio-item">
      <radio value="wooden" checked="{{soundType === 'wooden'}}"/>
      <text>原木 Wooden</text>
    </label>
    <label class="radio-item">
      <radio value="glass" checked="{{soundType === 'glass'}}"/>
      <text>玻璃 Glass</text>
    </label>
    <label class="radio-item">
      <radio value="meow" checked="{{soundType === 'meow'}}"/>
      <text>喵 Meow</text>
    </label>
  </radio-group>

  <button size="mini" bindtap="playSampleSound">试听走棋音效 Play Sample Move Sound</button>

  <button class="save-btn" bindtap="saveSettings">保存设置 Save</button>

</view>